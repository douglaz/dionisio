!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Experimento")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'star_rating'
    = yield(:head)   
    = javascript_include_tag :defaults

  %body
    #container
      #amdin_nav
      - if admin_signed_in?
        %strong
          %span#admin_email
            =h current_admin.email
        |
        = link_to "Logout", destroy_admin_session_path 
        |
        = link_to "Envio de convites", new_invitation_path
      #user_nav        
        = link_to "Home", root_path 
        |
        - if user_signed_in?
          %strong
            %span#user_email
              =h current_user.email
          |
          = link_to "Meu perfil", current_user
          |
          = link_to "Sair", destroy_user_session_path
        - else
          = link_to "Login", new_user_session_path
        
      #phase-description
        = phase_description_content 
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield
