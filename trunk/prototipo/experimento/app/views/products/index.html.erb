<%= render :partial => 'product_search', :locals => {:search => @search}%>

<p>
  Odernar por:
  <%= order @search, :by => :name, :as => "nome" %>
</p>  

<div id="productList">
  <% @products.each do |product| %>
  <%= render :partial => 'products/product', :locals => {:product => product, :show_stars => true, :truncate_description => true, :rating => @ratings.select{|r| r.product_id == product.id}.first || Rating.new(:stars => 0)}  %>
  <% end -%>
</div>
<div>                           
  <%= render :partial => 'product_search', :locals => {:search => @search}%>  
  <%= will_paginate @products %> 
</div>


