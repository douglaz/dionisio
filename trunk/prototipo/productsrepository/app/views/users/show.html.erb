<% title "My Profile" %>
 
<p>Username: <%=h @user.username %></p>
 
 
<h2>Friends</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%=h friendship.friend.username %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>
 
<p><%= link_to "Find Friends", users_path %></p>
 
<h2>Friended by Users</h2>
<ul>
  <% for user in @user.inverse_friends %>
    <li><%=h user.username %></li>
  <% end %>
</ul>

<h2>System Product Recommendations</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Recommendation Score</th>
  </tr>
  <% for product in @user.recommended_products %>
    <tr>
      <td><%=h product.name %></td>
      <td><%=h product.recommendation_score %></td>
      <td><%= link_to "Show", product %></td>
    </tr>
  <% end %>
</table> 

<h2>Friend's Product Recommendations</h2>
<ul id="user_recommendations">
<% UserRecommendation.for(current_user).each do |user_recommendation|%>
  <li class="username">
    <%= link_to "#{user_recommendation.product}", user_recommendation.product %>
    recommended by
    <%=h user_recommendation.recommender %>
    </li>
  <% end -%>
</ul>