<h1>New User Recommendation</h1>

<% form_for(@user_recommendation) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :recommender %><br />
    <%= current_user.username %>
  </p>
  <p>
    <%= f.label :product_id %><br />
    <%= link_to h(@product.name), :controller => "products", :action => "show", :id => @product %>
  </p>
  <p>   
    <% i = 0%>  
    <%= f.label 'I recommend it to...' %><br />
    <table border="0" cellspacing="5" cellpadding="5"> 
    <% current_user.friends.each do |friend|%>
      
        <%= i = i + 1; "<tr>" if (i % 10 == 0) %>  
          <td>
            <%= check_box_tag "user[#{friend.id}]", "#{friend.username}", false %>  
            <%= friend.username %>
          </td>
        <%= i = i + 1; "<tr/>" if (i % 10 == 0) %>  
              
    <% end -%> 
    </table>
  </p>
  <p>
    <%= f.submit 'Recommend!' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>