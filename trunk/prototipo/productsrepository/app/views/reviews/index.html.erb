<h1>Listing reviews</h1>
<h2><%= link_to @product, product_path(@product) %></h2>
<table>
  <tr>
    <th>Reviewer</th>
    <th>Rating</th>
    <th>Summary</th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%=h review.user.username %></td>
    <td><%= render :partial => 'rating_stars', :locals => { :review => review }%></td>
    <td><%=h truncate(review.summary,:length => 65) %></td>
    <td><%= link_to 'Show', product_review_path(review.product,review) %></td>
    <td><%= link_to 'Edit', edit_product_review_path(review.product,review) %></td>
    <td><%= link_to 'Destroy', product_review_path(review.product,review), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />